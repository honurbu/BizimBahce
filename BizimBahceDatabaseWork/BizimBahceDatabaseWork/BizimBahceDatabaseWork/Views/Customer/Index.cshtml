@using BizimBahceDatabaseWork.Models.Entities
@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_OliveLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<body>
    <!-- Navbar Start -->
    <!-- Navbar End -->
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 position-relative overlay-bottom">
        <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5" style="min-height: 400px">
            <h1 class="display-4 mb-3 mt-0 mt-lg-5 text-white text-uppercase">Müşterilerimiz</h1>
            <div class="d-inline-flex mb-lg-5">
                <p class="m-0 text-white"><a class="text-white" href="/BizimBahce/Index/">BizimBahçe</a></p>
                <p class="m-0 text-white px-2">/</p>
                <p class="m-0 text-white">Müşterilerimiz</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Testimonial Start -->
    <div class="container-fluid py-5">
        <div class="container">
            <div class="section-title">
                <h4 class="text-primary text-uppercase" style="letter-spacing: 5px;">Müşterilirimiz</h4>
                <h1 class="display-4">Müşteri Yorumlarımız</h1>
            </div>

            <div class="owl-carousel testimonial-carousel">
                @foreach (var item in Model)
                {
                    @if (item.IsActive != false)
                    {

                        <div class="testimonial-item">

                            <div class="d-flex align-items-center mb-3">
                                <img class="img-fluid" src="~/web/img/person.png" alt="">
                                <div class="ml-3">
                                    <h4>@item.Customer.CustomerName @item.Customer.CustomerSurname</h4>
                                    <i>@item.Customer.CustomerProvince</i> <br />
                                </div>


                            </div>
                            <strong><i>@item.CommentTitle</i></strong>
                            <p class="m-0">"<i>@item.CommentSubject</i>"</p>

                        </div>
                    }
                }
            </div>
            <a href="/Customer/Comment/"><i>Yorum Ekle</i></a>

        </div>
    </div>

    <!-- Testimonial End -->
    <!-- Footer Start -->
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>
</body>

</html>
