@using BizimBahceDatabaseWork.Models.Entities
@model IEnumerable<Admin>

@{
    ViewData["Title"] = "ListAdmin";
    Layout = "~/Areas/Adminss/Views/Shared/_AdminLayout.cshtml";
}

<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Adminler</h5>
                        <div class="ibox-tools">
                        </div>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Admin ID</th>
                                    <th>Admin Kullanıcı Adı</th>
                                    <th>Admin Mail</th>
                                    <th>Admin Hakkında</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AdminID</td>
                                        <td>@item.Username</td>
                                        <td>@item.Mail</td>
                                        <td>@item.About</td>
                                        <td><a href="/Adminss/AdminEdit/AdminEdit/@item.AdminID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Adminss/AdminEdit/AdminEdit/@item.AdminID" class="btn btn-outline-success">Düzenle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*<a href="/Adminss//" class="btn btn-primary">Yeni Admin Ekle</a>*@


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $("div.main-panel div.content-wrapper").css("overflow-x", "auto");
    </script>
</body>
</html>