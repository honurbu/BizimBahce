@model BizimBahceDatabaseWork.Models.Entities.Admin

@{
    ViewData["Title"] = "AdminEdit";
    Layout = "~/Areas/Adminss/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm("AdminEdit", "AdminEdit", FormMethod.Post))
{

    @Html.Label("Admin Id")
    @Html.TextBoxFor(x => x.AdminID, new { @class = "form-control, @readonly = true " })
    <br />

    @Html.Label("Admin KullanıcıAdı")
    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
    <br />


    @Html.Label("Admin Mail")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })


    <br />

    @Html.Label("Admin Hakkında")
    @Html.TextBoxFor(x => x.About, new { @class = "form-control" })

    <br />
    @Html.Label("Admin Şifre")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })

    <br />


    <br />
    <br />

    <button class="btn btn-success" id="btn1">Güncelle</button>

    <script>
        $('#btn1').click(function () {

            swal("Admin Güncellendi !");
        });

    </script>



}