@using BizimBahceDatabaseWork.Models.Entities
@model BizimBahceDatabaseWork.Models.Entities.OliveOil

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Adminss/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateProduct", "AdminProduct", FormMethod.Post))
{
    @Html.Label("Yağ Id")
    @Html.TextBoxFor(x => x.OliveOilsID, new { @class = "form-control, @readonly=true" })
    <br />


    @Html.Label("Yağ Adı")
    @Html.TextBoxFor(x => x.OliveOilType.OliveOilDescription, new { @class = "form-control" })
    <br />


    @Html.Label("Yağ Fiyatı")
    @Html.TextBoxFor(x => x.OliveOilPrice.OliveOilPriceLiter, new { @class = "form-control" })

    <br />


    @Html.Label("Yağ Asit Oranı")
    @Html.TextBoxFor(x => x.OliveOilProperty.OliveOilAsidic, new { @class = "form-control" })

    <br />
    @Html.Label("Yağ Litresi")
    @Html.TextBoxFor(x => x.OliveOilProperty.OliveOilLiter, new { @class = "form-control" })
    <br />



    @Html.Label("Yağ Yararı")
    @Html.TextAreaFor(x => x.OliveOilBenefit.OliveOilBenefitDescription, 10,3, new { @class = "form-control" })

    <br />
    @Html.Label("Yağ Özellikleri")
    @Html.TextAreaFor(x => x.OliveOilProperty.OliveOilDescription, 10, 3, new { @class = "form-control" })





    <br />

    <br />
    <br />

    <button class="btn btn-success" id="btn1">Güncelle</button>

}