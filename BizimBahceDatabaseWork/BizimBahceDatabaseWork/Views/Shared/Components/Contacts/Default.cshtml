@using BizimBahceDatabaseWork.Models.Entities
@model List<Contact>

<div class="section-title">
    <h4 class="text-primary text-uppercase" style="letter-spacing: 5px;">Bizimle İletişime Geçin</h4>
    <h1 class="display-4">İletişim Adreslerimiz</h1>
</div>
@foreach (var item in Model)
{
    <div class="row px-3 pb-2">
        <div class="col-sm-4 text-center mb-3">
            <i class="fa fa-2x fa-map-marker-alt mb-3 text-primary"></i>
            <h4 class="font-weight-bold">Adres</h4>
            <p>@item.ContactAddress</p>
        </div>
        <div class="col-sm-4 text-center mb-3">
            <i class="fa fa-2x fa-phone-alt mb-3 text-primary"></i>
            <h4 class="font-weight-bold">Telefon</h4>
            <p>@item.ContactPhoneNumber</p>
        </div>
        <div class="col-sm-4 text-center mb-3">
            <i class="far fa-2x fa-envelope mb-3 text-primary"></i>
            <h4 class="font-weight-bold">Email</h4>
            <p>@item.ContactMail</p>
        </div>
    </div>
}
