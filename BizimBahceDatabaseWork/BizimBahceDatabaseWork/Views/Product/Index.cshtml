@using BizimBahceDatabaseWork.Models.Entities
@model List<OliveOil>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_OliveLayout.cshtml";
}

<!DOCTYPE html>

<html lang="en">
<body>
    <!-- Navbar Start -->
    <!-- Navbar End -->
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 position-relative overlay-bottom">
        <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5" style="min-height: 400px">
            <h1 class="display-4 mb-3 mt-0 mt-lg-5 text-white text-uppercase">Ürünlerimiz</h1>
            <div class="d-inline-flex mb-lg-5">
                <p class="m-0 text-white"><a class="text-white" href="">Home</a></p>
                <p class="m-0 text-white px-2">/</p>
                <p class="m-0 text-white">Menu</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Menu Start -->
    <div class="container-fluid pt-5">
        <div class="container">
            <div class="section-title">
                <h4 class="text-primary text-uppercase" style="letter-spacing: 5px;">Ürünlerimiz & Fiyatlandırmalarımız</h4>
                <h1 class="display-4">Bütçe Dostu Fiyatlandırma</h1>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="mb-5 text-center">Yağlarımız</h1>
                    <div class="row d-flex justify-content-center align-items-start align-content-stretch mb-5">
                        @foreach (var item in Model)
                        {
                            <div class="col-sm-12 col-xl-6 col-md-8 mb-3 px-5 d-flex flex-column justify-content-start align-items-center">
                                <h4 class="text-center">@item.OliveOilType.OliveOilDescription</h4>
                                <img src="~/web/img/dene4.png" width="300" height="300" class="mx-auto mb-3" />
                                <h4 class="text-center">Asit Oranı</h4> <strong>@item.OliveOilProperty.OliveOilAsidic</strong>
                                <h5 class="display bg-primary p-3 d-inline-block border rounded-lg text-white">@item.OliveOilPrice.OliveOilPriceLiter ₺</h5>
                                @*<h4>@item.OliveOilProperty.OliveOilsDescription</h4>*@
                                <p class="m-0 text-justify">@item.OliveOilProperty.OliveOilDescription</p>
                                <br />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>

</body>

</html>